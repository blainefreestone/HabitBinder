<Window x:Class="Habit_Binder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Habit_Binder"
        mc:Ignorable="d"
        Title="Habit Binder Menu" Height="250" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label FontSize="25" HorizontalContentAlignment="Center">Habit Binder Menu</Label>

        <StackPanel Grid.Row="1" Margin="5,0,0,0">
            <Button x:Name="btnCreateHabit" Click="ButtonCreateHabit_Click" Margin="0,10,5,0">Create New Habit</Button>
            <Button x:Name="btnDisplayAll" Click="ButtonDisplayAll_Click" Margin="0,10,5,0">Display All Habits</Button>
            <Button x:Name="btnDisplaySingle" Click="ButtonDisplaySingle_Click" Margin="0,10,5,0">Display Single Habit</Button>
            <Button x:Name="btnDisplayTracker" Click="ButtonDisplayTracker_Click" Margin="0,10,5,0">Display Habit Tracker</Button>
            <Button x:Name="btnRecordComplete" Click="ButtonRecordComplete_Click" Margin="0,10,5,0">Record Habit Completion for Today</Button>
            
        </StackPanel>
    </Grid>
    
</Window>
